#!/usr/bin/ksh
choice=$1
case $choice in
"start")
        cd /opt/ercole-agent-perl
        echo "starting"
        sudo -u ercole sh -c "cd /opt/ercole-agent-perl && nohup ./ercole-agent >>/var/log/ercole-agent-perl.log 2>&1 &"
        ;;
"stop")
        ps -ef|grep -i ercole-agent|grep -v grep|awk '{print $2}'|xargs -L1 kill -9 
        ;;
esac